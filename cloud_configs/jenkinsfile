pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Determine Project Type') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build Project') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Push new Version') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Prepare env') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Docker build') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Anchorage scanning - nonblocking') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Docker publish') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Deploy GCP Artifacts') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Deployment to GCP') {
            steps {
                echo 'Hello World'
                script {
                   sh "ls $workspace/cloud_configs/test_script.groovy"
                   
                   def file_status = fileExists($workspace/cloud_configs/test_script.groovy)
                   echo $file_status
                }
            }
        }
        stage('test stage') {
           when { expression { return fileExists('$workspace/cloud_configs/test_script.groovy') } }
           steps {
               script {
                   def test_script = load "$workspace/cloud_configs/test_script.groovy"
                   test_script.another_stage()
               }
           }
        }
    }
    
    post {
      success {
        echo "job success"
      }
      failure {
        echo "job failure"
      }
      unstable {
        echo "job unstable"
      }      
    }
}
